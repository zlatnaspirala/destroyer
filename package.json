{
  "name": "safir",
  "version": "1.0.4",
  "description": "Ultimate web app perfomance. Tech: Based on ECMA6 programming paradigms builded on Template Literals, CustomEvents, Custom Tags.",
  "main": "index.js",
  "scripts": {
    "demo1": "build-assets.sh | watchify hello/demo1.js -p [esmify --noImplicitAny] -o dist/hello.js",
    "demo2": "build-assets.sh | watchify hello/demo2.js -p [esmify --noImplicitAny] -o dist/hello.js",
    "build": "build-assets.sh | browserify hello/demo1.js -p esmify > dist/hello.js",
    "build.lib": "browserify lib.js -p esmify > dist/safir.lib.js",
    "host": "http-server ./dist/ -p 80",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "browser-resolve": "^2.0.0",
    "watchify": "^4.0.0"
  },
  "devDependencies": {
    "esmify": "^2.1.1"
  },
  "author": "Nikola Lukic",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zlatnaspirala/safir.git"
  }
}
